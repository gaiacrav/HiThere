<div class="user-show-container">
  <% if @user.photo.attached? %>
  <%= cl_image_tag @user.photo.key, class: "avatar-user-show" %>
  <% else %>
  <%= image_tag("fakepic.png", class: "avatar-user-show") %>
  <% end %>
  <h5 class="header-sub"><%= @user.first_name%> <%=@user.last_name%></h5>
</div>

</div>
<div id="user-show-bottom-container">
  <div id="user-show-left-column">
    <div id="user-show-about-me">
      <div>
        <h6> <strong> About me </strong> </h6>
        <p id="user-show-small-font"><%= image_tag "email-icon.png", class: "user-show-icon" %> <%= @user.email%></p>
        <p id="user-show-small-font"><%= image_tag "country-icon.png", class: "user-show-icon" %>  <%= @user.country%></p>
        <p id="user-show-small-font"><%= image_tag "gender-icon.png", class: "user-show-icon" %> <%= @user.gender.capitalize%></p>
        <p id="user-show-small-font"><%= image_tag "age-icon.png", class: "user-show-icon" %> <%= @user.age%></p>
      </div>
      <div >
        <% if @user == current_user%>
          <%= link_to "✎ edit", edit_user_path, id: "user-show-edit-button"  %>
        <%end%>
        </div>
    </div>
    <div id="user-show-top-3">
      <h6> <strong> My favorite movies </strong> </h6>
        <p id="user-show-small-font"> <% @favorite_videos.each do |video|%> </p>
        <p id="user-show-small-font"> ❤️ <%= video.title%> </p>
        <%end %>
      <div style="flex-grow:1"></div>
      <p id="user-show-minimal-font">view more...</p>
    </div>
  </div>

  <div id="user-show-right-column">
    <h6 style="margin-bottom: 20px"> <strong> Friends </strong> </h6>
    <%=render "components/show-friends"%>
    <p id="user-show-minimal-font">view more...</p>
  </div>
</div>
<div class="user-show-middle-container">
  <div>
    <%= render "components/back-button"%>
  </div>
</div>
