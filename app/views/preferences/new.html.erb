<div class="home-container">
  <h1 class="header"> One last step! </h1>
  <h5 id="dashboard-sub"> <span id="name"> <strong> <%= current_user.first_name %> </strong> </span> tell us more about your favorite movies🍿 </h5>

    <%= form_tag new_preference_path, method: :get do %>
      <%= select_tag "genre", options_from_collection_for_select(@genres, "id", "name", params[:genre]), prompt: "Select a genre" %>
      <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>


  <% if @genre %>
    <p> <strong> 🥳 We have found <%= @count %> <span id="name"> movies! </span></strong> </p>
  <%else%>
    <p> <strong>❗️Please select a <span id="name"> genre! </span></strong> </p>
  <%end%>

  <% if @videos.count > 0 %>
  <form action="/preferences" method="post">
    <% counter=0 %>
  <div class="card-body mt-2">
      <% @videos.each do |video| %>
    <div class="row">
        <% if current_user.videos.where(id: video.id)!=[] %>
          <i class="fal fa-heart"></i>
        <% end %>
    <input type="checkbox" name=array[<%= counter %>] class="m-2">
      <label for=<%= video.title %> class="card-title"> <span id="name"> <%= video.title %> 🎬 </span> </label>
      </br> <p class="ml-2"> <em> Genre: </em> <%= video.genre %> </p>
      <% counter+=1 %>
    </div>
    <% end %>
  </div>
    <input type="submit" value="Submit" class="btn btn-ghost ml-0 mt-1">
  </form>
  <%end%>
  </div>


</div>

